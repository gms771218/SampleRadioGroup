                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/item_question_bg"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/detailkey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/question1_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/question_title_size" />
                </LinearLayout>

                <com.gms.sampleradiogroup.view.CusRadioGroup
                    android:id="@+id/radio_group_question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.gms.sampleradiogroup.view.CusRadioButton
                        android:id="@+id/radio_1a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/item_options_bg"
                        android:button="@null"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/question1_option_a"
                        android:textColor="@color/item_options_txt_color"
                        android:textSize="@dimen/question_option_size"
                        app:isCorrectAnswer="false" />

                    <com.gms.sampleradiogroup.view.CusRadioButton
                        android:id="@+id/radio_1b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/item_options_bg"
                        android:button="@null"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/question1_option_b"
                        android:textColor="@color/item_options_txt_color"
                        android:textSize="@dimen/question_option_size"
                        app:isCorrectAnswer="true" />

                    <com.gms.sampleradiogroup.view.CusRadioButton
                        android:id="@+id/radio_1c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/item_options_bg"
                        android:button="@null"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/question1_option_c"
                        android:textColor="@color/item_options_txt_color"
                        android:textSize="@dimen/question_option_size"
