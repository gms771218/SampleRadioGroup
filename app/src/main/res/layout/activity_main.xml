                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/item_options_bg"
                        android:button="@null"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/question1_option_d"
                        android:textColor="@color/item_options_txt_color"
                        android:textSize="@dimen/question_option_size"
